<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </WebView>

    <ImageView
        android:id="@+id/nonet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_x="158dp"
        android:layout_y="364dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/wv"
        app:layout_constraintEnd_toEndOf="@+id/wv"
        app:layout_constraintStart_toStartOf="@+id/wv"
        app:layout_constraintTop_toTopOf="@+id/wv"
        app:srcCompat="@drawable/nonet"
        android:contentDescription="@string/todo" />

    <ProgressBar
        android:id="@+id/pbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="216dp"
        android:layout_height="255dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/wv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>